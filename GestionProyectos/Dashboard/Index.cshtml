                        <table class="z-depth-3">
                            <tbody>
                                <tr>
                                    <td>
                                        <strong>Técnico</strong>
                                    </td>
                                    <td>
                                        <strong>Detalle</strong>
                                    </td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.DropDownList("Tecnico", new SelectList(ViewBag.Tecnicos, "Value", "Text"), new { @class = "browser-default" })
                                    </td>
                                    <td>
                                        <div class="col-md-12 input-field col s12">
